{
  "name": "n8n-nodes-bcdrllc",
  "version": "2.0.0",
  "description": "BCDR Company - Cloud API integration for n8n. Send messages, media, templates, and manage business communications",
  "keywords": [
    "n8n-community-node-package",
    "bcdr-company",
    "bcdrllc",
    "messaging",
    "business-communications",
    "cloud-api",
    "saudi-arabia"
  ],
  "license": "MIT",
  "homepage": "https://bcdr.sa",
  "author": {
    "name": "BCDR Company",
    "email": "sales@bcdr.sa"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BCDRLLC/n8n-nodes-bcdrllc.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-icons",
    "copy-icons": "cp nodes/**/*.svg dist/nodes/ 2>/dev/null || cp nodes/Bcdrllc/*.svg dist/nodes/Bcdrllc/ && cp nodes/BcdrllcTrigger/*.svg dist/nodes/BcdrllcTrigger/ && cp nodes/BcdrllcFlowTrigger/*.svg dist/nodes/BcdrllcFlowTrigger/",
    "dev": "tsc --watch",
    "lint": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/BcdrllcApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Bcdrllc/Bcdrllc.node.js",
      "dist/nodes/BcdrllcTrigger/BcdrllcTrigger.node.js",
      "dist/nodes/BcdrllcFlowTrigger/BcdrllcFlowTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "n8n-workflow": "*",
    "typescript": "^5.0.0"
  }
}